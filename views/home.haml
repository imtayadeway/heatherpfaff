.jumbotron
  %h1 Heather Pfaff
  %p Stylist
#myCarousel.carousel.slide{"data-ride" => "carousel"}
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
  .carousel-inner
    .item.active
      %img{alt: "Fashion", src: "images/home/carousel-1.jpg"}
        .container
          .carousel-caption
            %h1 Fashion.
            %p
              %a.btn.btn-lg.btn-primary{href: "/fashion", role: "button"} Browse Gallery
    .item
      %img{alt: "Beauty", src: "images/home/carousel-2.jpg"}
        .container
          .carousel-caption
            %h1 Beauty.
            %p
              %a.btn.btn-lg.btn-primary{href: "/beauty", role: "button"} Browse Gallery
    .item
      %img{alt: "Covers", src: "images/home/carousel-3.jpg"}
        .container
          .carousel-caption
            %h1 Covers.
            %p
              %a.btn.btn-lg.btn-primary{href: "/covers", role: "button"} Browse Gallery
  %a.left.carousel-control{"data-slide" => "prev", href: "#myCarousel", role: "button"}
    %span.glyphicon.glyphicon-chevron-left
  %a.right.carousel-control{"data-slide" => "next", href: "#myCarousel", role: "button"}
    %span.glyphicon.glyphicon-chevron-right
