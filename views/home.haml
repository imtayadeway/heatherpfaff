#myCarousel.carousel.slide{"data-ride" => "carousel"}
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
  .carousel-inner
    .item.active
      %img{alt: "First slide", src: "images/home/1.png"}
        .container
          .carousel-caption
            %h1 Example headline.
            %p Cras justo odio, dapibus ac facilisis in, egestas eget quam.
            %p
              %a.btn.btn-lg.btn-primary{href: "/fashion", role: "button"} Fashion
    .item
      %img{alt: "Second slide", src: "images/fashion/1.jpg"}
        .container
          .carousel-caption
            %h1 Another example headline.
            %p Cras justo odio, dapibus ac facilisis in, egestas eget quam.
            %p
              %a.btn.btn-lg.btn-primary{href: "/beauty", role: "button"} Beauty
    .item
      %img{alt: "Third slide", src: "images/fashion/2.jpg"}
        .container
          .carousel-caption
            %h1 One more for good measure.
            %p Cras justo odio, dapibus ac facilisis in, egestas eget quam.
            %p
              %a.btn.btn-lg.btn-primary{href: "/covers", role: "button"} Covers
  %a.left.carousel-control{"data-slide" => "prev", href: "#myCarousel", role: "button"}
    %span.glyphicon.glyphicon-chevron-left
  %a.right.carousel-control{"data-slide" => "next", href: "#myCarousel", role: "button"}
    %span.glyphicon.glyphicon-chevron-right
